<Window x:Class="VuLeDuy_WPF.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VuLeDuy_WPF"
        mc:Ignorable="d"
        Title="Customer Dialog" Height="350" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Label Content="Mã Khách Hàng" Grid.Row="0"/>
        <TextBox x:Name="txtCustomerID" Grid.Row="0" Margin="120,0,0,0" IsEnabled="False"/>
        <Label Content="Họ Tên" Grid.Row="1"/>
        <TextBox x:Name="txtFullName" Grid.Row="1" Margin="120,0,0,0"/>
        <Label Content="Email" Grid.Row="2"/>
        <TextBox x:Name="txtEmail" Grid.Row="2" Margin="120,0,0,0"/>
        <Label Content="Điện Thoại" Grid.Row="3"/>
        <TextBox x:Name="txtTelephone" Grid.Row="3" Margin="120,0,0,0"/>
        <Label Content="Ngày Sinh" Grid.Row="4"/>
        <DatePicker x:Name="dpBirthday" Grid.Row="4" Margin="120,0,0,0"/>
        <Label Content="Mật Khẩu" Grid.Row="5"/>
        <TextBox x:Name="txtPassword" Grid.Row="5" Margin="120,0,0,0"/>
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnSave" Content="Lưu" Width="80" Margin="5" Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Content="Hủy" Width="80" Margin="5" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>